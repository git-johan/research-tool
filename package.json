{
  "name": "research-assistant",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8080",
    "ngrok": "ngrok http --url=empathy-as-a-service.ngrok.app 8080",
    "chromadb": "npx chroma run --host 0.0.0.0 --port 8000 --path ./chroma-data",
    "dev:all": "concurrently \"npm run dev\" \"npm run ngrok\" \"npm run chromadb\"",
