    "dotenv": "^16.4.7",
    "mongodb": "^6.20.0",
    "next": "^15.5.6",
    "openai": "^4.77.3",
    "p-limit": "^7.2.0",
    "pdf-parse": "^2.4.5",
    "pdfjs-dist": "^5.4.296",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
